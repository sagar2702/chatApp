<!doctype html>
<html>
  <head>
    <title>Apni-Baat</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@1,600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="mycss.css">
    <script defer src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script defer src="client.js"></script>
  </head>
  <body>
    <div class="container display">
      <h1>APNI BAAT: A Real Time Chat Application</h1>
      <div class="chat">
        <div class="joined">
          <h2 class="text-center sticky-top">People in Chat: <span id="count"></span></h2>
          <div class="showList">
            <ul id="members" class="text-center"></ul>
            <!-- <h3 id="counter" class="text-center"><span id="count"></span></h3> -->
          </div>
       </div>
       <div class="msgbox">
         <ul id="messages"></ul>
       </div>
      </div>
    </div>
    <div class="container msginp">
      <form action="">
        <div class="form-row">
          <div class="col-sm-1"></div>
            <div class="col-sm-8">
              <input type="text" class="form-control form-control-lg mb-1" id="msg">
            </div>
            <div class="col-sm-2"><button class="btn btn-lg btn-danger btn-block">SEND</button></div>
            <div class="col-sm-1"></div>
      </form>
    </div>
    
  </body>
</html>